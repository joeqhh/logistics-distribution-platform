generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
 // url      = env("DATABASE_URL")
}

enum ProductStatus {
  SALE
  UNDERCARRIAGE
}


enum OrderStatus {
  PENDING
  CONFIRMED
  DELIVERING
  DELIVERED
  CANCELLED
  REFUNDED
}

enum LogisticsStatus {
  PENDING
  IN_TRANSIT
  DELIVERING
  DELIVERED
  CANCELLED
}

model Consumer {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(100)
  avatar     String?  @db.VarChar(255)
  gender     Boolean  @default(false)
  account    String   @unique @db.VarChar(50)
  password   String   @db.VarChar(255)
  isDeleted  Boolean  @default(false) @map("is_deleted")
  createTime DateTime @default(now()) @map("create_time")
  updateTime DateTime @updatedAt @map("update_time")
  
  // 关系
  addresses ConsumerAddress[]
  orders    Order[]

  @@map("consumer")
}

model ConsumerAddress {
  id              Int      @id @default(autoincrement())
  receiver        String   @db.VarChar(50)
  phone           String?  @db.VarChar(20)
  area            String?  @db.VarChar(255)
  detailedAddress String?  @db.VarChar(500) @map("detailed_address")
  location        String?  @db.VarChar(255)
  isDeleted       Boolean  @default(false) @map("is_deleted")
  createTime      DateTime @default(now()) @map("create_time")
  updateTime      DateTime @updatedAt @map("update_time")
  consumerId      Int     @map("consumer_id")
  
  // 关系
  consumer        Consumer? @relation(fields: [consumerId], references: [id])

  @@map("consumer_address")
}

model Merchant {
  id           Int      @id @default(autoincrement())
  name         String?  @db.VarChar(100)
  address      String?  @db.VarChar(500)
  avatar       String?  @db.VarChar(255)
  deliveryArea String?  @db.VarChar(500) @map("delivery_area")
  account      String   @unique @db.VarChar(50)
  password     String   @db.VarChar(255)
  isDeleted    Boolean  @default(false) @map("is_deleted")
  createTime   DateTime @default(now()) @map("create_time")
  updateTime   DateTime @updatedAt @map("update_time")
  
  // 关系
  products     Product[]
  orders       Order[]

  @@map("merchant")
}

model Product {
  id           String    @id
  name         String    @db.VarChar(100)
  price        Decimal   @db.Decimal(10, 2)
  introduction String?   @db.Text
  merchantId   Int       @map("merchant_id")
  sales        Int       @default(0)
  images       Json?
  cover        String    @db.VarChar(255)
  isDeleted    Boolean   @default(false) @map("is_deleted")
  createTime   DateTime  @default(now()) @map("create_time")
  updateTime   DateTime  @updatedAt @map("update_time")
  status       ProductStatus @default(UNDERCARRIAGE)

  // 关系
  merchant     Merchant  @relation(fields: [merchantId], references: [id])

  @@map("product")
}

model Order {
  id          String      @id
  number      String      @unique @db.VarChar(50)
  receiptTime DateTime?   @map("receipt_time")
  status      OrderStatus @default(PENDING)
  company     String?     @db.VarChar(100)
  isDeleted   Boolean     @default(false) @map("is_deleted")
  createTime  DateTime    @default(now()) @map("create_time")
  updateTime  DateTime    @updatedAt @map("update_time")
  consumerId  Int         @map("consumer_id")
  merchantId  Int         @map("merchant_id")
  
  // 关系
  consumer    Consumer    @relation(fields: [consumerId], references: [id])
  merchant    Merchant    @relation(fields: [merchantId], references: [id])
  logistics   Logistics?

  @@map("order")
}

model Logistics {
  id         Int            @id @default(autoincrement())
  orderId    String         @unique @map("order_id")
  status     LogisticsStatus @default(PENDING)
  describe   String?        @db.Text
  location   String?        @db.VarChar(255)
  isDeleted  Boolean        @default(false) @map("is_deleted")
  createTime DateTime       @default(now()) @map("create_time")
  updateTime DateTime       @updatedAt @map("update_time")
  
  // 关系
  order      Order          @relation(fields: [orderId], references: [id])

  @@map("logistics")
}
