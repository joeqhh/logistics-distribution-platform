generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ProductStatus {
  SALE
  UNDERCARRIAGE
}

enum AddressType {
  SENDER
  RECEIVER
}

enum OrderStatus {
  WAITDELIVER
  TRANSPORTING
  DELIVERING
  WAITRECEIVE
  RECEIVED
}

enum LogisticsStatus {
  WAITDELIVER
  TRANSPORTING
  DELIVERING
  WAITRECEIVE
  RECEIVED
}

model Consumer {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(100)
  avatar     String?  @db.VarChar(255)
  gender     Boolean  @default(false)
  account    String   @unique @db.VarChar(50)
  password   String   @db.VarChar(255)
  isDeleted  Boolean  @default(false) @map("is_deleted")
  createTime DateTime @default(now()) @map("create_time")
  updateTime DateTime @updatedAt @map("update_time")
  
  // 关系
  orders    Order[]

  @@map("consumer")
}

model Address {
  id              Int      @id @default(autoincrement())
  name            String   @db.VarChar(50)
  phone           String?  @db.VarChar(20)
  area            String?  @db.VarChar(255)
  location        String?  @db.VarChar(127)
  detailedAddress String?  @db.VarChar(500) @map("detailed_address")
  isDeleted       Boolean  @default(false) @map("is_deleted")
  createTime      DateTime @default(now()) @map("create_time")
  updateTime      DateTime @updatedAt @map("update_time")
  userId          Int      @map("user_id")
  type            AddressType  @default(RECEIVER) @map("type")
  
  receivedOrders Order[] @relation(name: "OrderReceiveAddress")
  sentOrders     Order[] @relation(name: "OrderSenderAddress")
  @@map("address")
}

model Merchant {
  id           Int      @id @default(autoincrement())
  name         String?  @db.VarChar(100)
  avatar       String?  @db.VarChar(255)
  deliveryArea Json?    @map("delivery_area")
  account      String   @unique @db.VarChar(50)
  password     String   @db.VarChar(255)
  isDeleted    Boolean  @default(false) @map("is_deleted")
  createTime   DateTime @default(now()) @map("create_time")
  updateTime   DateTime @updatedAt @map("update_time")
  
  // 关系
  products     Product[]
  orders       Order[]

  @@map("merchant")
}

model Product {
  id           String    @id
  name         String    @db.VarChar(100)
  price        Decimal   @db.Decimal(10, 2)
  merchantId   Int       @map("merchant_id")
  sales        Int       @default(0)
  images       Json?
  cover        String    @db.VarChar(255)
  isDeleted    Boolean   @default(false) @map("is_deleted")
  createTime   DateTime  @default(now()) @map("create_time")
  updateTime   DateTime  @updatedAt @map("update_time")
  status       ProductStatus @default(UNDERCARRIAGE)

  merchant     Merchant  @relation(fields: [merchantId], references: [id])
  orders       Order[]
  @@map("product")
}

model Order {
  id          String      @id
  number      String      @unique @db.VarChar(50)
  receiptTime DateTime?   @map("receipt_time")
  //status      OrderStatus @default(WAITDELIVER)
  company     String?     @db.VarChar(100)
  isDeleted   Boolean     @default(false) @map("is_deleted")
  createTime  DateTime    @default(now()) @map("create_time")
  updateTime  DateTime    @updatedAt @map("update_time")
  consumerId  Int         @map("consumer_id")
  merchantId  Int         @map("merchant_id")
  productId   String      @map("product_id")
  receiveAddressId   Int      @map("receive_address_id")
  senderAddressId   Int?      @map("sender_address_id")
  
  // 关系
  consumer    Consumer    @relation(fields: [consumerId], references: [id])
  merchant    Merchant    @relation(fields: [merchantId], references: [id])
  logistics   Logistics?
  product     Product     @relation(fields: [productId], references: [id])
  receiveAddress Address  @relation(name: "OrderReceiveAddress", fields: [receiveAddressId], references: [id])
  senderAddress Address?  @relation(name: "OrderSenderAddress", fields: [senderAddressId], references: [id])

  @@map("order")
}

model Logistics {
  id         Int            @id @default(autoincrement())
  orderId    String         @unique @map("order_id")
  status     LogisticsStatus @default(WAITDELIVER)
  describe   String?        @db.VarChar(255)
  location   String?        @db.Text
  isDeleted  Boolean        @default(false) @map("is_deleted")
  createTime DateTime       @default(now()) @map("create_time")
  
  // 关系
  order      Order          @relation(fields: [orderId], references: [id])

  @@map("logistics")
}
